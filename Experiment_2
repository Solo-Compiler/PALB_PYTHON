
# Question 1: Kth Smallest Element
class OrderStatisticFinder:
    def extract_kth(self, numeric_collection, rank_position):
        sorted_snapshot = sorted(numeric_collection)
        return sorted_snapshot[rank_position - 1]


# Question 2: Minimize the Heights (Compulsory +/- k)
class Solution:
    def getMinDiff(self, arr, k):
        n = len(arr)
        
        if n == 1:
            return 0
        
        arr.sort()
        
        ans = arr[n - 1] - arr[0]
        
        for i in range(1, n):
            if arr[i] - k < 0:
                continue
            
            maxi = max(arr[i - 1] + k, arr[n - 1] - k)
            mini = min(arr[0] + k, arr[i] - k)
            
            ans = min(ans, maxi - mini)
        
        return ans



# Question 3: Minimum Number of Jumps
class Solution:
    def minJumps(self, arr):
        n = len(arr)
        
        # Edge cases
        if n <= 1:
            return 0
        if arr[0] == 0:
            return -1
        
        maxReach = arr[0]
        steps = arr[0]
        jumps = 1
        
        for i in range(1, n):
            # If reached the end
            if i == n - 1:
                return jumps
            
            # Update max reachable index
            maxReach = max(maxReach, i + arr[i])
            
            # Use a step
            steps -= 1
            
            # If no steps left
            if steps == 0:
                jumps += 1
                
                # Cannot move further
                if i >= maxReach:
                    return -1
                
                # Reinitialize steps
                steps = maxReach - i
        
        return -1
